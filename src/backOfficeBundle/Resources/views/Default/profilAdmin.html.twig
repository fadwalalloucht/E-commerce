{% extends "@backOffice/base.html.twig" %}
{% block title %}
PROFIL ADMIN
{% endblock title %}
{% block style %}

{% endblock style %}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Profile</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/index1/">Acceuil</a></li>
                            <li class="breadcrumb-item active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Information admin</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <!-- form start -->

                                <section class="content">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-3"></div>

                                            <div class="col-md-6">

                                                <!-- Profile Image -->
                                                <div class="card card-primary card-outline">
                                                    <div class="card-body box-profile">
                                                        <div class="text-center">
                                                            <img class="profile-user-img img-fluid img-circle"
                                                                 src="{{ asset('bundles/dist/img/avatar5.png') }}"
                                                                 alt="User profile picture">
                                                        </div>

                                                        <h3 class="profile-username text-center">{{ app.session.get("user").nom }} {{  app.session.get("user").prenom }}</h3>


                                                        <ul class="list-group list-group-unbordered mb-3">
                                                            <form method="POST">
                                                                <!-- form start -->
                                                                <div class="form-group">
                                                                    <label>Nom :</label>
                                                                    <input type="text" class="form-control" name="nom" id="nom" value="{% if user.nom  is defined %}{{ user.nom }}{% endif %}">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Prenom :</label>
                                                                    <input type="text" class="form-control" name="prenom" id="prenom" value="{% if user.prenom  is defined %}{{ user.prenom }}{% endif %}">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Email :</label>
                                                                    <input type="text" class="form-control" name="email" id="email" value="{% if user.email  is defined %}{{ user.email }}{% endif %}">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Telephone :</label>
                                                                    <input type="text" class="form-control" name="tel" id="tel" value="{% if user.tel  is defined %}{{ user.tel }}{% endif %}">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Adresse :</label>
                                                                    <input type="text" class="form-control" name="adresse" id="adresse" value="{% if user.adresse  is defined %}{{ user.adresse }}{% endif %}">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Mot de passe :</label>
                                                                    <input type="password" class="form-control" name="password" id="password">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Nouveau mot de passe :</label>
                                                                    <input type="password" class="form-control" name="newpassword" id="newpassword">
                                                                </div>
                                                                {% if response is defined and response!=""%}
                                                                    <div class="alert alert-danger">
                                                                        {{response}}
                                                                    </div>
                                                                {% endif %}
                                                                <button type="submit" class="btn btn-primary btn-block" id="submit">Enregistrer</button>

                                                                <!-- form end -->
                                                            </form>
                                                        </ul>

                                                    </div>
                                                    <!-- /.card-body -->
                                                </div>
                                            </div>
                                            <div class="col-md-3"></div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock body %}
{% block js %}

{% endblock js %}
