                                                                                        {% endfor %}
                                                                                    </datalist>
                                                                                </td>
                                                                                <td><input type='text' name='puht[]' id='puht-{{ d.id }}' value='{{ d.prixU }}' onchange='calculRow({{ d.id }})'></td>
