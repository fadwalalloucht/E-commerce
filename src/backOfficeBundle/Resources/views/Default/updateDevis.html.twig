                                                                                <td><input type='text' name='ptht[]' id='ptht-{{ d.id }}' value='{{ d.totalHT }}' readonly class='ptht'></td>
                                                                                <td><input type='text' name='tva[]' id='tva-{{ d.id }}' value='{{ d.tva }} %'class='tva' onchange='calulAll()'></td>
