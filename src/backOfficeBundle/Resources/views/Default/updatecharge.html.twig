{% extends "@backOffice/base.html.twig" %}
{% block title %}
MODIFIER CHARGE
{% endblock title %}
{% block style %}

{% endblock style %}
{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Modifier Charge</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/index1/">Acceuil</a></li>
                            <li class="breadcrumb-item active">Modifier Charge</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Modifier Charge</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <!-- form start -->
                                <form role="form" id="FormAdd" method="post" enctype="multipart/form-data">

                                    {% if charge is defined %}

                                    <div class="form-group">
                                        <label>Date :</label>
                                        <input type="date" class="form-control" name="date" value="{{charge.date|date("Y-m-d")}}">
                                    </div>
                                    <div class="form-group">
                                        <label>montant Total :</label>
                                        <input type="text" class="form-control" name="total" value="{{charge.total}}">
                                    </div>

                                    <div class="form-group">
                                        <label>Description :</label>
                                        <textarea class="form-control cleditor" rows="3" name="description">{{charge.description}}</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>Pièce de joint :</label>
                                        <input type="file" name="fichier">
                                    </div>
                                    {% if pj|length>0 %}
                                        <a href="{{ pj.urlfile }}" TARGET="_blank"><h3>Piéce jointe</h3></a>
                                    {% endif %}


                                    <div style="text-align: center;">
                                        <button type="submit" class="btn btn-success" id="submit" >Enregistrer</button>
                                        <button type="reset" class="btn btn-danger">Annuler</button>
                                    </div>

                                </form>

                                <div id="response" style="margin-top: 10px;">

                                </div>
                                <!-- form end -->
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </section>
    </div>
{% endif %}

{% endblock body %}
{% block js %}
    <script type="text/javascript" src="{{ asset('/Bundle/ST/js/jquery.popupoverlay.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/Bundle/ST/js/noty/packaged/jquery.noty.packaged.min.js') }}"></script>
    <script type="text/javascript">
        {% if response is defined and response!="" and response!="success" %}
        $(document).ready(function () {

            noty({
                text: "{{ response }}",
                type: "error",
                theme: 'relax',
                layout: 'bottom',
                timeout: 3000,
                animation: {
                    open: 'animated flipInX',
                    close: 'animated flipOutX', // jQuery animate function property object
                    easing: 'swing', // easing
                    speed: 200 // opening & closing animation speed
                }

            });

        });
        {% endif %}
        {% if response2 is defined and response2!="" and response2!="success" %}
        $(document).ready(function () {

            noty({
                text: "{{ response2 }}",
                type: "error",
                theme: 'relax',
                layout: 'bottom',
                timeout: 3000,
                animation: {
                    open: 'animated flipInX',
                    close: 'animated flipOutX', // jQuery animate function property object
                    easing: 'swing', // easing
                    speed: 200 // opening & closing animation speed
                }

            });

        });
        {% endif %}
        {% if response is defined and response=="success" %}
        $(document).ready(function () {

            noty({
                text: "Opération pass avec succés",
                type: "success",
                theme: 'relax',
                layout: 'bottom',
                timeout: 3000,
                animation: {
                    open: 'animated flipInX',
                    close: 'animated flipOutX', // jQuery animate function property object
                    easing: 'swing', // easing
                    speed: 200 // opening & closing animation speed
                }

            });

        });

        {% endif %}


    </script>
{% endblock js %}