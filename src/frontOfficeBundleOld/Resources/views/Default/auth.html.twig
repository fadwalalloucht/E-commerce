{% extends "@frontOffice/base1.html.twig" %}
{% block title %}
    CONNEXION
{% endblock title %}
{% block body %}
    <div class="hero-wrap hero-bread" style="background-image: url({{ asset('Bundle/assets/images/12.png') }});">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-0 bread">Mon compte</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 ftco-animate">
                    <form method="post" class="billing-form">
                        <input type="hidden" name="formName" value="connect">
                        <h3 class="mb-4 billing-heading">Identification</h3>
                        <div class="row align-items-end">
                            <div class="col-md-12">
                                {% if response != "" %}
                                    <p style="width: 100%" class="alert alert-danger">{{ response }} </p>
                                {% endif %}
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="firstname">Email</label>
                                    <input type="text" class="form-control" name="email" value="">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="lastname">Mot de passe</label>
                                    <input type="password" class="form-control" name="password" value="">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary py-3 px-4 btn-block" value="Se connecter" />
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-10">
                                        <a href="/MotDePasseOublie/" class="ForgetPwd"><i class="fa fa-dot-circle-o"></i> Mot de passe oubli√©</a>
                                    </div>
                                    <div class="col-md-2">
                                        <a class="btnSubmit" href="/inscri/">Inscrivez-vous</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form><!-- END -->
                </div> <!-- .col-md-8 -->
            </div>
        </div>
    </section> <!-- .section -->

{% endblock body %}