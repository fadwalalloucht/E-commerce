{% extends "@frontOffice/base1.html.twig" %}
{% block title %}
    INSCRIPTION
{% endblock title %}
{% block body %}
    <div class="hero-wrap hero-bread" style="background-image: url({{ asset('Bundle/assets/images/15.jpg') }});">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-0 bread">Nouveau compte</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 ftco-animate">
                    <form method="post" class="billing-form">
                        <h3 class="mb-4 billing-heading">Créer un compte</h3>
                        <div class="row align-items-end">
                            <div class="col-md-12">
                                {% if response is defined and response!=""%}
                                    <div class="alert alert-danger">
                                        <center> {{ response }} </center>
                                    </div>
                                {% endif %}
                                <div class="form-group">
                                    <label for="country">Sexe <span class="text-danger">*</span></label>
                                    <select name="sexe" class="form-control">
                                        <option value="M" {% if sexe is defined and sexe =="M" %}selected{% endif %}>M.</option>
                                        <option value="Mme" {% if sexe is defined  and sexe =="Mme" %}selected{% endif %}>Mme.</option>
                                        <option value="Mlle" {% if sexe is defined  and sexe =="Mlle" %}selected{% endif %}>Mlle.</option>
                                    </select>
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstname">Prénom <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" value="{% if prenom is defined %}{{ prenom }}{% endif %}" name="prenom">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lastname">Nom <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="nom"  value="{% if nom is defined %}{{ nom }}{% endif %}">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="streetaddress">Téléphone fix <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" value="{% if tel is defined %}{{ tel }}{% endif %}" name="tel">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="streetaddress">Téléphone mobile <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control"  value="{% if mobile is defined %}{{ mobile }}{% endif %}" name="mobile">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="towncity">Adresse <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="adresse" value="{% if adresse  is defined %}{{ adresse }}{% endif %}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="emailaddress">Email <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="email" value="{% if email is defined %}{{ email }}{% endif %}">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Mot de passe <span class="text-danger">*</span></label>
                                    <input type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Confirmation Mot de passe <span class="text-danger">*</span></label>
                                    <input type="password" name="password2" class="form-control">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary py-3 px-4 btn-block" value="Valider" />
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-10">
                                        <a href="/auth/" class="ForgetPwd"><i class="fa fa-dot-circle-o"></i> Je pocède un compte</a>
                                    </div>
                                    <div class="col-md-2">
                                        <a class="btnSubmit" href="/inscri/">Inscrivez-vous</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form><!-- END -->
                </div> <!-- .col-md-8 -->
            </div>
        </div>
    </section> <!-- .section -->

{% endblock body %}