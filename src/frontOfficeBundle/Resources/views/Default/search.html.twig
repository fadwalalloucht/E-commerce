{% extends "@frontOffice/base1.html.twig" %}
{% block title %}
    RECHERCHE
{% endblock title %}
{% block body %}
    <div class="hero-wrap hero-bread" style="background-image: url({{ asset('Bundle/assets/images/39.jpg') }});">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-0 bread">Recherche</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">Resulat de Recherche</h2>
            </div>
        </div>
    </div>
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12 order-md-last">
                    <div class="row">
                        {% for a in article %}
                            <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                                <div class="product d-flex flex-column">
                                    <a href="/produit_detail/{{ a['obj'].titre|replace({"/":"-"," ":"-" }) }}/{{ a['obj'].id }}" class="img-prod"><img class="img-fluid" src="{{ asset(a['img']) }}">
                                        <div class="overlay"></div>
                                    </a>
                                    <div class="text py-3 pb-4 px-3">
                                        <div class="d-flex">
                                            <div class="cat">
                                                <span>Cat√©gorie</span>
                                            </div>
                                            <div class="rating">
                                                <p class="text-right mb-0">
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                </p>
                                            </div>
                                        </div>
                                        <h3><a href="#">{{ a["obj"].titre|slice(0,30) }}</a></h3>
                                        <div class="pricing">
                                            <p class="price">
                                                {% if a["obj"].prix > a["prix"] %}
                                                    <span style="color:red;">{{ a["prix"] }} MAD </span>
                                                    <del style="font-size: 10px;">
                                                        {{ a["obj"].prix }} MAD
                                                    </del>
                                                {% else %}
                                                    {{ a["prix"] }} MAD
                                                {% endif %}
                                            </p>
                                        </div>
                                        <p class="bottom-area d-flex px-3">
                                            <a href="/produit_detail/{{ a['obj'].titre|replace({"/":"-"," ":"-" }) }}/{{ a['obj'].id }}" class="add-to-cart text-center py-2 mr-1">Voir le produit<span><i class="ion-ios-cart ml-1"></i></span></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock body %}